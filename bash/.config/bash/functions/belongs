# -*- mode: sh; -*-

EXIT_FAILURE=1

# Find out to which Pacman package a command belongs to

belongs() {
    while [[ $# -gt 0 ]];
    do
	echo -n "$1: "

	cmdpath="$(command -v $1 | tr -d '\n')"

	if [[ $(echo -n "$cmdpath" | wc -c) -gt 0 ]]; then
	    pkgs=$(pacman -Fq "$cmdpath")

	    echo -n $pkgs
	else
	    echo -n >&2 "can't find the executable (check if it's in your PATH)"
	fi

	echo ""

	shift
    done
}
